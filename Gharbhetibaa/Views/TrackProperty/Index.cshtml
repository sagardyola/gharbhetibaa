@model Gharbhetibaa.Models.PropertyManagement.Property

<div class="modal-header">
    <h5 class="modal-title text-white" id="exampleModalLongTitle">Property Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true" class="text-white">&times;</span>
    </button>
</div>
<div class="modal-body bg-white">
    <section id="propertydetails">
        <div class="container">

            <div class="row">
                <div class="col-6 col-md-3 offset-md-1">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "" })
                </div>
                <div class="col-6 col-md-7">
                    @Model.Title
                </div>
            </div>

            <div class="row">
                <div class="col-6 col-md-3 offset-md-1">
                    @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "" })
                </div>
                <div class="col-6 col-md-7">
                    @Model.Location
                </div>
            </div>

            <div class="row">
                <div class="col-6 col-md-3 offset-md-1">
                    @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "" })
                </div>
                <div class="col-6 col-md-7">
                    @Model.City
                </div>
            </div>

            <div class="row">
                <div class="col-6 col-md-3 offset-md-1">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "" })
                </div>
                <div class="col-6 col-md-7 text-justify">
                    @Model.Description
                </div>
            </div>
        </div>
    </section>
</div>
<div class="modal-footer back-light">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>